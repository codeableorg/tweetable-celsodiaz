<h1>Edit Profile</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch, multipart: true) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

    <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), style: "border-radius: 50%; max-width: 50px; max-height: 50px;" %>
    <% end %>
  </div>

  <div>
    <%= form.label :avatar, style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password , autocomplete: "password"%>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation , autocomplete: "password_confirmation" %>
  </div>

  <div>
    <%= form.label :current_password,style: "display: block" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= form.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back ", @user %>
</div>
