<%= form_with(model: tweet, url: tweets_path, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
        <% tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_area :body, 
    placeholder: 
    "Escribe tu tweet aquí... Por ejemplo: ¡Hola, Twitter! Estoy emocionado por compartir mis ideas en 280 caracteres.",
     rows: 8, cols: 50 %>
    <%= form.submit "Tweet" %>
  </div>

  <% if @user.present? %>
    <%= form.hidden_field :user_id, value: @user.id %>
  <% end %>

  <%= form.hidden_field :replied_to_id%>
<% end %>
