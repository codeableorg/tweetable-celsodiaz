<h1>Editing tweet</h1>

<%= form_for(@tweet, url: tweet_path(@tweet), method: :patch) do |form| %>
  <div>
    <%= form.text_area :body,
      rows: 8, cols: 50 %>
    <%= form.submit "Update" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this tweet", @tweet %> |
  <%= link_to "Back to tweets", tweets_path %>
</div>
